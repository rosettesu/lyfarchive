<% provide(:title, 'LYF Camp Registration 2017') %>
<div class="row">
  <div class="col-md-3">
    <h3>LYF Camp 2017 Registration</h3>
    <p>outline</p>
  </div>
  <div class="col-md-9">
    <h1>Parent Information</h1>
    <%= form_for @parent, url: wizard_path, method: :put do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row">
        <div class="col-md-12">
          <p>* = Required</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 form-group">
          <%= f.label :first_name, "Parent First Name *" %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="col-md-4 form-group">
          <%= f.label :last_name, "Parent Last Name *" %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 form-group">
          <%= f.label :email, "Parent Email *" %>
          <%= f.email_field :email, class: 'form-control' %>
          <p class="help-block">This will be our primary means of contact; please double check for accuracy!</p>
        </div>
        <div class="col-md-4 form-group">
          <%= f.label :phone_number, "Parent Phone Number *" %>
          <%= f.telephone_field :phone_number, placeholder: '(###) ###-####', class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 form-group">
          <%= f.label :street, "Street Address *" %>
          <%= f.text_field :street, class: 'form-control' %>
        </div>
        <div class="col-md-4 form-group">
          <%= f.label :city, "City *" %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="col-md-2 form-group">
          <%= f.label :state, "State *" %>
          <%= f.text_field :state, class: 'form-control' %>
        </div>
        <div class="col-md-2 form-group">
          <%= f.label :zip, "Zip Code *" %>
          <%= f.text_field :zip, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= link_to "Cancel", wizard_path(:begin), data: { confirm: "Are you sure you want to cancel this registration? Any changes you have made on any part of this form will not be saved." }, class: "btn btn-default btn-block" %>
        </div>
        <div class="col-md-2 col-md-offset-8">
          <%= f.submit "Continue", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
