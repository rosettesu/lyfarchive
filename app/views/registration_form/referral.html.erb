<% provide(:title, 'LYF Camp Registration 2017') %>
<div class="row">
  <div class="col-md-3">
    <h3>LYF Camp 2017 Registration</h3>
    <p>outline</p>
  </div>
  <div class="col-md-9">
    <h1>Referral</h1>
    <%= form_for @parent, url: wizard_path, method: :put do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :referral_method, "How did you hear about us? *" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-2">
          <%= link_to "Cancel", wizard_path(:begin), data: { confirm: "Are you sure you want to cancel this registration? Any changes you have made on any part of this form will not be saved." }, class: "btn btn-default btn-block" %>
        </div>
        <div class="col-md-2 col-md-offset-6">
          <%= link_to "Previous Step", previous_wizard_path, class: "btn btn-default btn-block" %>
        </div>
        <div class="col-md-2">
          <%= f.submit "Continue", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
