<% provide(:title, 'LYF Camp Registration 2017') %>
<div class="row">
  <div class="col-md-3">
    <h3>LYF Camp 2017 Registration</h3>
    <%= render 'outline' %>
  </div>
  <div class="col-md-9">
    <h1>Payment</h1>
    <p>to be completed</p>
    <p>Once you submit your payment your registration will be saved.</p>
    <%= form_for @parent, url: wizard_path, method: :put do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row">
        <div class="col-md-2">
          <%= link_to "Back", previous_wizard_path, class: "btn btn-default btn-block" %>
        </div>
        <div class="col-md-5 col-md-offset-5">
          <%= f.submit "Submit Payment & Complete Registration", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
