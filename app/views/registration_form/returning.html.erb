<% provide(:title, 'LYF Camp Registration 2017') %>
<h1 class="text-center">Register a Returning Camper</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for @camper, url: wizard_path, method: :put do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :birthdate %>
        <div class="row">
          <div class="col-md-4">
            <%= f.date_select :birthdate, { start_year: Date.today.year - 20, end_year: Date.today.year - 5, order: [:day, :month, :year], prompt: { day: 'Day', month: 'Month', year: 'Year' }, date_separator: '</div><div class="col-md-4">' }, { class: 'date form-control col-md-4' } %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= link_to "Cancel", previous_wizard_path, class: "btn btn-default btn-block" %>
        </div>
        <div class="col-md-6">
          <%= f.submit "Continue", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
